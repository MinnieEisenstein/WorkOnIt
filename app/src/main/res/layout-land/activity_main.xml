<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- App bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Work OnIt"
            app:titleCentered="true"
            app:titleTextColor="@android:color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content under app bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- vertical split: left = 42% (quote + buttons), right = 58% (list) -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_v_42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.42" />

        <!-- Quote card (left column, top) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/quote_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="12dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#FFE2EC"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="#FFF8FB"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/category_buttons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_v_42">

            <TextView
                android:id="@+id/quote_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:gravity="center"
                android:text="Loading quoteâ€¦"
                android:textSize="18sp"
                android:lineSpacingExtra="6dp"
                android:letterSpacing="0.02"
                android:textColor="#2E2A2A"
                android:textStyle="italic"
                android:fontFamily="cursive" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Category buttons (left column, bottom) -->
        <LinearLayout
            android:id="@+id/category_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_v_42">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_on_hold"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:lines="2"
                android:gravity="center"
                android:text="On-hold goals"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_completed"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:lines="2"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Completed goals"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_expired"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:lines="2"
                android:gravity="center"
                android:text="Expired goals"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- ACTIVE goals list (right column) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_goals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_v_42"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/row_goal" />

        <!-- Empty state (center over the list area) -->
        <TextView
            android:id="@+id/empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_goals_yet"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/recycler_goals"
            app:layout_constraintBottom_toBottomOf="@id/recycler_goals"
            app:layout_constraintStart_toStartOf="@id/recycler_goals"
            app:layout_constraintEnd_toEndOf="@id/recycler_goals" />

        <!-- Extended FAB (floats above left buttons, near split) -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Goal"
            android:contentDescription="@string/add"
            android:layout_margin="16dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            app:backgroundTint="?attr/colorPrimary"
            app:layout_constraintBottom_toTopOf="@id/category_buttons"
            app:layout_constraintEnd_toEndOf="@id/guideline_v_42" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>