<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_goal_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGoalActivity">

    <!-- App bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/add_goal_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="Add Goal"
            app:titleCentered="true"
            app:titleTextColor="@android:color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content area under app bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- center the whole form and cap width at 50% -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.5">

            <LinearLayout
                android:id="@+id/container_all_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Step indicator -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_steps"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:indeterminate="false"
                    app:trackCornerRadius="8dp"
                    app:indicatorColor="?attr/colorPrimary"
                    app:trackColor="?attr/colorOutline" />

                <!-- ============ STEP 1: Type & Duration ============ -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/step1_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Step 1 of 3"
                            android:textStyle="bold"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="1sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="What kind of goal is this?"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="1sp" />

                        <!-- Start vs Stop -->
                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/group_goal_kind"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:selectionRequired="true"
                            app:singleSelection="true">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_kind_start"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="56dp"
                                android:padding="12dp"
                                android:text="I want to make this a part of my life"
                                android:singleLine="false"
                                android:lines="2"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="8sp"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeStepGranularity="1sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_kind_stop"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="56dp"
                                android:padding="12dp"
                                android:text="I want to stop doing this"
                                android:singleLine="false"
                                android:lines="2"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="8sp"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeStepGranularity="1sp" />
                        </com.google.android.material.button.MaterialButtonToggleGroup>

                        <!-- Duration -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="How long do you want to work on it?"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="1sp" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chips_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_1_week"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 week" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_1_month"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 month" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_custom"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Custom" />
                        </com.google.android.material.chip.ChipGroup>

                        <!-- Custom duration inputs (shown only if Custom is picked) -->
                        <LinearLayout
                            android:id="@+id/row_custom_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Number">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_custom_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:hint="Unit (days / weeks / months / years)">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_custom_unit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textCapWords" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <!-- Next -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_step1_next"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:minHeight="56dp"
                            android:padding="12dp"
                            android:text="Next →"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="16sp"
                            app:autoSizeStepGranularity="1sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ============ STEP 2: Why ============ -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/step2_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Step 2 of 3"
                            android:textStyle="bold"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="1sp" />

                        <TextView
                            android:id="@+id/tv_sentence_prompt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Why do you want to start this habit?"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="1sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="write your why…">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_sentence_goal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapSentences|textMultiLine"
                                android:minLines="3" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- preview -->
                        <TextView
                            android:id="@+id/tv_sentence_preview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:alpha="0.8"
                            tools:text="Preview: I’m choosing this because…"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="16sp"
                            app:autoSizeStepGranularity="1sp" />

                        <!-- Nav buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_step2_back"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="56dp"
                                android:padding="12dp"
                                android:text="← Back"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeMaxTextSize="16sp"
                                app:autoSizeStepGranularity="1sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_step2_next"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:minHeight="56dp"
                                android:padding="12dp"
                                android:text="Next →"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeMaxTextSize="16sp"
                                app:autoSizeStepGranularity="1sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ============ STEP 3: Details & Save ============ -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/step3_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Step 3 of 3"
                            android:textStyle="bold"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="18sp"
                            app:autoSizeStepGranularity="1sp" />

                        <!-- Goal name -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Goal name">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_goal_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Notes -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="Notes (optional)">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_notes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapSentences|textMultiLine"
                                android:minLines="2" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Actions -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_step3_back"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="56dp"
                                android:padding="12dp"
                                android:text="← Back"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeMaxTextSize="16sp"
                                app:autoSizeStepGranularity="1sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_save"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:minHeight="56dp"
                                android:padding="12dp"
                                android:text="Save goal"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeMaxTextSize="16sp"
                                app:autoSizeStepGranularity="1sp" />
                        </LinearLayout>

                        <!-- Cancel -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cancel"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:minHeight="56dp"
                            android:padding="12dp"
                            android:text="Cancel"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="16sp"
                            app:autoSizeStepGranularity="1sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>